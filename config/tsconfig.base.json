{
  "compilerOptions": {
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "stripInternal": true,
    "moduleResolution": "Node16",
    "lib": ["es2017"]
  },
  "include": ["../src/"],
  "exclude": [
    "../src/__tests__"
  ]
}
